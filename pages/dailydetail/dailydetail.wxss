/* pages/detail.wxss */
@import "/wxParse/wxParse.wxss";

.art-header{
    position: relative;
    width: 100%;
    height: 600rpx;
    color: #FFF;
}

.art-img{
    width: 100%;
    height: 600rpx;
}

.art-title{
    position: absolute;
    bottom: 36px;
    left: 8px;
    padding-right: 16rpx;
    font-size: 20px;
}

.art-source {
    position: absolute;
    bottom: 8px;
    font-size: 12px;
    right: 8px;   
}

.art-content{
    font-size: 14px;
    color: #616466;
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 10px;
    background-color: #FFF;
    line-height: 1.5;
}

.art-content2{
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 10px;
    padding-bottom: 10px;
}